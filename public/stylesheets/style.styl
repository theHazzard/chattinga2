body
	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
header
	width 100%
	background-image linear-gradient(bottom, rgb(0,0,0) 22%, rgb(31,33,33) 61%, rgb(41,41,41) 81%)
	box-shadow 0px 3px 5px #888888	
	color #E8E8E8
	height 2em
	font: 22px "Lucida Grande", Helvetica, Arial, sans-serif
#titulo
	float left
	vertical-allign center
	margin-top 10px
	padding-left 1em
#userdata
	float right
#pic
	float left
	margin-right 1em
	img 
		padding-top 2px
		height 1.9em
		width 2em
#Usuario
	font: 16px "Lucida Grande", Helvetica, Arial, sans-serif
	display inline-block
	float center
	margin-top 12px
	padding-right 1em
#logout
	display left
	margin-right 1em
#chat
	width 95%
	height 500px
	display block
	margin-right auto
	margin-left auto
	border-width 2px
	border-color #E8E9E4
#messages
	float left
	width 80%
	height 100%
	background-color #EDEEEA
	overflow auto
	overflow-y auto
#conectados
	float right
	display inline-block
	width 20%
	height 100%
	background-color #EDEEEA
	overflow auto
	overflow-y auto
#say
	width 100%
input
	width 100%
	height 25px
#container
	text-allign center
	height 100%
	width 100%
.foto 
	display inline-block
	width 3%
	img
		height 35px
		width 35px
.msg
	width 100%
	height 3em
	display block
.nombre
	width 10%
	display inline-block
	vertical-align middle
	padding-bottom 1.5em
.mensaje
	width 87%
	display inline-block
	padding-bottom 1.5em
